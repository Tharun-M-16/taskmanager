# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/project-bolt
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/project-bolt

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Security
BCRYPT_ROUNDS=12

# CORS (Frontend origins)
# Single origin (e.g., your Vite dev server)
CORS_ORIGIN=http://localhost:5177
# Multiple origins (comma-separated). Useful for LAN IPs, e.g. http://192.168.1.50:5177
# CORS_ORIGINS=http://192.168.1.50:5177,http://localhost:5177

# Optional: MongoDB Atlas (if using cloud)
# MONGODB_USER=your_username
# MONGODB_PASS=your_password
# MONGODB_CLUSTER=your_cluster_name

# Optional: Email Configuration (for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: File Upload (for future use)
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./uploads
